<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:background="?attr/selectableItemBackground"
    android:orientation="horizontal"
    android:padding="6dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/wch_his_lst_cardView"
        android:layout_width="160dp"
        android:layout_height="100dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp">

        <ImageView
            android:id="@+id/wch_his_lst_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginStart="2dp"
            android:background="@color/dark_grey"
            android:requiresFadingEdge="horizontal"
            android:scaleType="centerCrop"
            android:src="@color/teal_200" />

        <TextView
            android:id="@+id/wch_his_lst_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:background="@color/dark_gray_100"
            android:padding="4dp"
            android:text="10:00"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/watch_later_linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toStartOf="@id/wch_his_lst_menu_more"
        android:layout_toEndOf="@id/wch_his_lst_cardView"
        android:orientation="vertical">

        <TextView
            android:id="@+id/wch_his_lst_videoName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="video name"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/wch_his_lst_channel_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="channel name"
            android:textColor="#888888" />

    </LinearLayout>

    <ImageView
        android:id="@+id/wch_his_lst_menu_more"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:foregroundTint="@color/dark_gray_100"
        android:src="@drawable/ic_more_vert_icon" />
</RelativeLayout>
